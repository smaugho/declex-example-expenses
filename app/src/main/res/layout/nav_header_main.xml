<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/origin_160dp"
        android:padding="@dimen/origin_20dp"
        android:background="@drawable/drawer_bkg">
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/origin_50dp"
            android:layout_height="@dimen/origin_50dp"
            android:layout_marginTop="@dimen/origin_20dp"
            android:src="@drawable/default_user" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/origin_10dp"
            android:layout_below="@id/user_image">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/white"
                android:textSize="@dimen/origin_15sp_text_size"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/origin_4dp">
                <ImageView
                    android:layout_width="@dimen/origin_12dp"
                    android:layout_height="@dimen/origin_12dp"
                    android:src="@drawable/drawer_mail"
                    android:layout_marginRight="@dimen/origin_4dp"/>
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@user.com"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/origin_12sp_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
