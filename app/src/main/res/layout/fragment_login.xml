<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.dspot.declex.example.expenses.fragment.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/expenses"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/origin_30dp"
        android:textSize="@dimen/origin_18sp_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/manager"
        android:id="@+id/textView13"
        android:textSize="@dimen/origin_38sp_text_size"
        android:textStyle="bold"
        android:textColor="@color/blue_gray"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/origin_100dp"
        android:layout_below="@+id/textView13"
        android:layout_margin="@dimen/origin_16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="@dimen/origin_10dp"
        android:ems="10"
        android:id="@+id/login_username"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:hint="@string/email"
        android:textSize="@dimen/origin_16sp_text_size"
        android:background="@drawable/bkg_text_edit"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="@dimen/origin_10dp"
        android:ems="10"
        android:id="@+id/login_password"
        android:layout_below="@+id/login_username"
        android:layout_centerHorizontal="true"
        android:hint="@string/password"
        android:textSize="@dimen/origin_16sp_text_size"
        android:layout_marginTop="@dimen/origin_16dp"
        android:background="@drawable/bkg_text_edit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        style="@style/yellowBtn"
        android:layout_alignRight="@+id/login_password"
        android:layout_alignLeft="@+id/login_password"
        android:layout_marginTop="@dimen/origin_40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_new_account"
        android:id="@+id/btnCreateAccount"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/origin_12sp_text_size"
        android:layout_marginTop="@dimen/origin_16dp"/>

    <TextView
        android:text="Powered By DecleX"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3"/>

</RelativeLayout>
